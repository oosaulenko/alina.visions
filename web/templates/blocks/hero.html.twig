{% extends 'blocks/base.html.twig' %}

{% block body_block %}
    {% if attributes.data.image is defined %}
        <div class="section__image">
            {{ looly_media(attributes.data.image) }}
        </div>
    {% endif %}
    <div class="section__content">
        <h1 class="section__title">{{ attributes.data.title }}</h1>
        <div class="section__content"><p>{{ attributes.data.text }}</p></div>
    </div>
{% endblock %}
