{% extends 'blocks/base.html.twig' %}

{% block body_block %}
    <div class="section__content">
        <h1 class="section__title display-2" data-text="{{ attributes.data.title }}">{{ attributes.data.title }}</h1>
        <div class="section__text lead">{{ attributes.data.text }}</div>
    </div>
    {% if attributes.data.image is defined %}
        <div class="section__image">
            {{ looly_media(attributes.data.image) }}
        </div>
    {% endif %}
{% endblock %}
