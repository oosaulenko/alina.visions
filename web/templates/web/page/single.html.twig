{% extends 'base.html.twig' %}

{% block body %}
    {% if page.data.container is defined and page.data.container %}
        <div class="container">
    {% endif %}

    {% if page.data.hide_title.0 is not defined or page.data.hide_title.0 != 'yes' %}
        <h1 class="page__title">{{ page.title }}</h1>
    {% endif %}

    {% if page.description is defined and page.description is not empty %}
        <div class="page__description lead">
            {{ page.description }}
        </div>
    {% endif %}

    {% if(page.content) %}
        {{ easy_gutenberg(page.content) }}
    {% endif %}

    {% if page.data.container is defined and page.data.container %}
        </div>
    {% endif %}

    {{ easy_gutenberg_assets() }}
{% endblock %}